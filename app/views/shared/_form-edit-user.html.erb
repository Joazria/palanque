  <%= simple_form_for() do |f| %>
   <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <%= f.input :username,
            placeholder: "Nome",
            autofocus: true,
            required: false %>
                    
        <%= f.input :email,
            required: false,
            autofocus: false,
            input_html: { autocomplete: "email" }%>

        <%= f.input :city,
            required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>