<div class="profile mt-lg">
  <div class="profile__edit">
    <div class="profile__img">
      <h2 class="heading-2">
        <%= current_user.username.slice(0,2).upcase %>
      </h2>
    </div>
    <div class="profile__info">
      <h2 class="profile__name heading-2"> <%= current_user.username %> </h2>
      <p class="profile__location text">Vota em s√£o paulo</p>
      <div class="profile__table mt-md">
        <div class="profile__table-item">
          <small class="text">Favoritos</small>
          <small class="text"><%= current_user.favorites.all.length %> </small>
        </div>
        <div class="profile__table-item">
          <small class="text">Email</small>
          <small class="text"> <%= current_user.email %> </small>
        </div>
      </div>
    </div>
  </div>

  <div class="profile__favorite">
    <h2 class="profile__favorite-title title">Favoritos</h2>
    <span class="separator"></span>
    <div class="profile__favorite-container mt-md">
      <%# condicional pra carregar os favoritos %>
      <% @candidates.each do |candidate| %>
        <%= render partial: "shared/card-mini", locals: {
          candidate: candidate
        } %>
      <% end %>
    </div>
  </div>
</div>